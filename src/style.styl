
row(spacing)
  display flex
  flex-direction row
  & > *:not(:last-child)
    margin-right spacing

col(spacing)
  display flex
  flex-direction column
  & > *:not(:last-child)
    margin-bottom spacing
    
html
  height 100%
body
  col(10px)
  height 100%
  margin 60px 30px
  box-sizing border-box
  font-family sans-serif
  background #eee
  overflow auto

h1,h2,h3,h4,h5,h6
  margin 0
  
h1
  align-self center
  
a
  display block
  margin -5px
  padding 5px
  border-radius 4px
  color inherit
  text-decoration inherit
  &:hover
    background rgba(0,0,0,0.1)
  
.page
  col(40px)
  align-self center
  animation 2s fadein
  
.profile
  row(20px)
  align-self center
  align-items center
  .avatar
    width 100px
    border-radius 50%
    box-shadow 0px 1px 3px rgba(0,0,0,0.3)
  .stuff
    col(5px)
    
.repos
  col(10px)
  .repo
    row(10px)
    align-items flex-end
    .repoName
      text-decoration underline
    .description
      color gray

@keyframes fadein
  from
    opacity 0
  to
    opacity 1
////////////////////////////
    
.spacer
  flex-grow 1
  margin 0 !important
  padding 0 !important

.grid
  display grid
  white-space nowrap
  > div
    display flex
    padding 5px 10px
    &:last-child
      width 100%
  &.lined > div:not(.last)
    border-bottom 1px solid white